@model MDUA.Entities.LandingPageViewModel
@{
    ViewData["Title"] = "Shop All Products";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/shop.css" asp-append-version="true" />
}

@* --- 📱 MOBILE: Category Button (Visible only on screens smaller than LG) --- *@
<div class="container mt-3 d-lg-none">
    <button class="btn btn-outline-secondary w-100 fw-bold d-flex align-items-center justify-content-between shadow-sm mb-3"
            type="button"
            data-bs-toggle="offcanvas"
            data-bs-target="#mobileShopMenu"
            aria-controls="mobileShopMenu">
        <span><i class="fas fa-filter me-2"></i> Filter Categories</span>
        <i class="fas fa-chevron-down small"></i>
    </button>
</div>

@* --- 📱 MOBILE: Offcanvas Sidebar Component --- *@
<div class="offcanvas offcanvas-start" tabindex="-1" id="mobileShopMenu" aria-labelledby="mobileShopLabel">
    <div class="offcanvas-header bg-light border-bottom">
        <h5 class="offcanvas-title fw-bold text-dark" id="mobileShopLabel">
            <i class="fas fa-list-ul me-2"></i> Select Category
        </h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body p-0">
        <div class="list-group list-group-flush">
            @* "All Products" Link to clear filter *@
            <a href="/all-products" class="list-group-item list-group-item-action py-3 fw-bold @(ViewBag.CurrentCategory == null ? "bg-light text-primary" : "")">
                All Products
            </a>

            @if (Model.Categories.Any())
            {
                foreach (var cat in Model.Categories)
                {
                    bool isActive = ViewBag.CurrentCategory != null && (int)ViewBag.CurrentCategory == cat.Id;
                    <a asp-controller="Home" asp-action="Shop" asp-route-category="@cat.Id"
                       class="list-group-item list-group-item-action py-3 d-flex justify-content-between align-items-center @(isActive ? "bg-primary text-white" : "")">
                        @cat.Name
                        @if (isActive)
                        {
                            <i class="fas fa-check"></i>
                        }
                    </a>
                }
            }
        </div>
    </div>
</div>

@* --- 🖥️ MAIN CONTENT LAYOUT --- *@
<div class="container mt-4 mb-5">
    <div class="row g-4">

        @* Desktop Sidebar (Hidden on Mobile) *@
        <div class="col-lg-3 d-none d-lg-block">
            <div class="category-sidebar">
                <div class="category-header">
                    <i class="fas fa-bars me-2"></i> Categories
                </div>

                @* Added "All Products" link for Desktop too *@
                <a href="/all-products" class="category-item @(ViewBag.CurrentCategory == null ? "active-category" : "")">
                    All Products
                </a>

                @if (Model.Categories.Any())
                {
                    foreach (var cat in Model.Categories)
                    {
                        @if (ViewBag.CurrentCategory != null && (int)ViewBag.CurrentCategory == cat.Id)
                        {
                            <a asp-controller="Home" asp-action="Shop" asp-route-category="@cat.Id" class="category-item active-category">
                                @cat.Name <i class="fas fa-check float-end small mt-1"></i>
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="Shop" asp-route-category="@cat.Id" class="category-item">
                                @cat.Name <i class="fas fa-chevron-right float-end small mt-1 opacity-50"></i>
                            </a>
                        }
                    }
                }
                else
                {
                    <div class="p-4 text-center text-muted small">
                        <i class="fas fa-folder-open mb-2"></i><br />
                        No categories found.
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-9">

            <div class="d-flex align-items-center justify-content-between mb-3">
                <div class="section-header mb-0">
                    <h2 class="fw-bold text-dark mb-0" style="font-size: 1.75rem;">All Products</h2>
                    <p class="text-muted mb-0 small">Browsing our complete collection</p>
                </div>

                <a href="/" class="back-link btn btn-sm btn-outline-secondary rounded-pill px-3">
                    <i class="fas fa-arrow-left me-1"></i> Back to Home
                </a>
            </div>

            @if (Model.NewArrivals.Any())
            {
                <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
                    @foreach (var prod in Model.NewArrivals)
                    {
                        <div class="col">
                            <div class="card product-card h-100">
                                <div class="product-img-wrapper">
                                    <a href="/product/@prod.Slug" target="_blank">
                                        @{
                                            string finalImgUrl = prod.ImageUrl;
                                            if (string.IsNullOrEmpty(finalImgUrl) || finalImgUrl.Contains("default-book.png"))
                                            {
                                                finalImgUrl = "https://placehold.co/400x400?text=No+Image";
                                            }
                                        }
                                        <img src="@finalImgUrl" alt="@prod.Name" onerror="this.src='https://placehold.co/400x400?text=No+Image'">
                                    </a>
                                </div>

                                <div class="card-body p-3 d-flex flex-column">
                                    <div class="product-title mb-1">
                                        <a href="/product/@prod.Slug" target="_blank" title="@prod.Name">@prod.Name</a>
                                    </div>

                                    <div class="small text-warning mb-2" style="font-size: 0.75rem;">
                                        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i>
                                        <span class="text-muted ms-1">(4.5)</span>
                                    </div>

                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="price-text">Tk. @prod.Price.ToString("N0")</span>
                                        </div>
                                        <button class="btn btn-sm btn-add-cart w-100 rounded-pill" onclick="addToCart(@prod.Id)">
                                            <i class="fas fa-cart-plus me-1"></i> Add
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="d-flex flex-column align-items-center justify-content-center w-100 py-5 bg-light rounded">
                    <div class="mb-4 p-4 rounded-circle bg-white shadow-sm">
                        <i class="fas fa-search fa-3x text-muted opacity-50"></i>
                    </div>
                    <h3 class="fw-bold text-dark mb-2">No products found</h3>
                    <p class="text-muted mb-4 text-center small" style="max-width: 400px;">
                        No products are available in this category at the moment.
                    </p>
                    <a asp-controller="Home" asp-action="Shop" asp-route-category="" class="btn btn-dark rounded-pill px-4">
                        See Other Products
                    </a>
                </div>
            }
        </div>
    </div>
</div>