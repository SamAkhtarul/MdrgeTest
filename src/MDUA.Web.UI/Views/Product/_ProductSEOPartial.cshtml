@model MDUA.Entities.ProductSEO

<link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

<style>
    .img-container {
        max-height: 500px;
        background-color: #f7f7f7;
        margin-bottom: 15px;
    }

        .img-container img {
            max-width: 100%;
        }
    /* Preview styling */
    .preview-box {
        position: relative;
        display: inline-block;
    }

    .btn-remove-image {
        position: absolute;
        top: -10px;
        right: -10px;
        background: red;
        color: white;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        text-align: center;
        line-height: 24px;
        cursor: pointer;
        font-size: 14px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }
</style>

<form id="form-product-seo">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="OGImage" id="hidden-og-image-path" />

    <ul class="nav nav-tabs mb-3" id="seoProductTabs" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-meta" type="button">Meta Tags</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-social" type="button">Social Image</button>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade show active" id="tab-meta">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label class="form-label fw-bold">Meta Title</label>
                    <input asp-for="MetaTitle" class="form-control" placeholder="Browser Tab Title">
                    <div class="form-text">Defaults to Product Name if empty.</div>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label fw-bold">Meta Description</label>
                    <textarea asp-for="MetaDescription" class="form-control" rows="3" placeholder="Summary for Google search results..."></textarea>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label fw-bold text-primary">
                        <i class="fas fa-code me-1"></i> Custom Header Tags (Raw HTML)
                    </label>
                    <textarea asp-for="CustomHeaderTags" class="form-control font-monospace" rows="4"
                              style="font-size: 0.85rem; background-color: #f8f9fa;"
                              placeholder='<meta name="twitter:card" content="summary_large_image">'></textarea>
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="tab-social">
            <div class="alert alert-info small mb-3">
                <i class="fas fa-info-circle me-1"></i> Image shown when sharing on Facebook/WhatsApp.
                <br>Recommended: <strong>1200 x 630 px</strong> (Aspect Ratio: ~1.91:1).
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Upload Image</label>
                <input type="file" id="seo-image-upload" class="form-control" accept="image/*">
            </div>

            <div id="seo-image-preview-container" class="text-center p-3 border rounded bg-light"
                 style="@(string.IsNullOrEmpty(Model.OGImage) ? "display:none;" : "")">
                <h6 class="text-muted small mb-2">Current Image</h6>
                <div class="preview-box">
                    <img id="seo-image-preview" src="@(Model.OGImage)"
                         style="max-width: 100%; max-height: 200px; object-fit: contain; border: 1px solid #ddd;" />
                    <span class="btn-remove-image" title="Remove Image">&times;</span>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-end">
        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success" id="btn-save-seo">
            <i class="fas fa-save me-1"></i> Save SEO
        </button>
    </div>
</form>

<div class="modal fade" id="cropperModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white py-2">
                <h6 class="modal-title">Crop Image</h6>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <div class="img-container">
                    <img id="cropper-image" src="" alt="Picture">
                </div>
                <div class="p-3 bg-light border-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-secondary btn-sm active" onclick="setAspectRatio(1200/630)">
                                Fixed (1.91:1)
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="setAspectRatio(NaN)">
                                Freestyle
                            </button>
                        </div>
                        <div>
                            <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary btn-sm" id="btn-crop-upload">
                                <i class="fas fa-check me-1"></i> Crop & Upload
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>