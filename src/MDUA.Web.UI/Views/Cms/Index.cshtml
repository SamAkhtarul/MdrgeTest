@model MDUA.Entities.List.CmsPageList
@{
    ViewData["Title"] = "CMS Pages";
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

<style>
    /* --- 1. STOP MAIN PAGE SCROLL --- */
    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden; /* Locks the browser window */
    }

    /* --- 2. LAYOUT STRUCTURE --- */
    .fixed-page-wrapper {
        height: calc(100vh - 80px); /* Adjusted for typical admin navbar height */
        display: flex;
        flex-direction: column;
        padding: 1.5rem;
        gap: 1.5rem;
    }

    /* Header & Stats take natural height (Don't shrink) */
    .page-header, .stats-row {
        flex-shrink: 0;
    }

    /* --- 3. SCROLLABLE TABLE AREA --- */
    .table-container {
        flex: 1; /* Takes all remaining space */
        overflow-y: auto; /* Enables Vertical Scroll */
        overflow-x: hidden; /* DISABLE Horizontal Scroll */
        background: white;
        border-radius: 12px;
        padding: 0; /* Remove padding to let table hit edges */
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        position: relative;
    }

    /* CRITICAL FIX: Force table to stay within container width */
    #pagesTable {
        width: 100% !important;
        table-layout: fixed; /* strictly obey column widths */
        margin-bottom: 0;
    }

        /* Sticky Table Header */
        #pagesTable thead th {
            position: sticky;
            top: 0;
            z-index: 5;
            background-color: #f8f9fa; /* Matches table-light */
            box-shadow: 0 1px 2px rgba(0,0,0,0.1); /* Subtle shadow line */
            white-space: nowrap;
        }

    /* --- THEME STYLES (Red/Yellow) --- */
    :root {
        --cms-primary: #d32f2f;
        --cms-primary-gradient: linear-gradient(135deg, #d32f2f 0%, #ff5252 100%);
    }

    .page-header {
        background: var(--cms-primary-gradient);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(211, 47, 47, 0.3);
    }

    .stats-card {
        background: white;
        border-radius: 12px;
        padding: 1.25rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        border-left: 4px solid var(--cms-primary);
        height: 100%;
    }

    .stats-icon {
        width: 45px;
        height: 45px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

    /* Custom Badges */
    .page-slug {
        font-family: 'Courier New', monospace;
        background: #fff8e1;
        color: #d32f2f;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.85rem;
        display: inline-block;
        max-width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
        vertical-align: middle;
    }

    .status-badge {
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        white-space: nowrap;
    }

    .status-active {
        background: #d4edda;
        color: #155724;
    }

    .status-inactive {
        background: #fff3cd;
        color: #856404;
    }

    .badge-layout {
        padding: 5px 8px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
        white-space: nowrap;
    }

    /* Button Override */
    .btn-create {
        background: white;
        color: #d32f2f;
        border: none;
        font-weight: bold;
    }

        .btn-create:hover {
            background: #fff8e1;
            color: #b71c1c;
        }

    /* Truncate text utility for cells */
    .cell-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

<div class="fixed-page-wrapper">

    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1 fs-4"><i class="fas fa-file-alt me-2"></i>CMS Pages</h2>
                <p class="mb-0 opacity-75 small">Manage website content</p>
            </div>
            <a asp-action="Create" class="btn btn-create">
                <i class="fas fa-plus-circle me-2"></i> Create Page
            </a>
        </div>
    </div>

    <div class="row g-3 stats-row">
        <div class="col-md-3">
            <div class="stats-card">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-danger bg-opacity-10 text-danger me-3"><i class="fas fa-file-alt"></i></div>
                    <div><div class="text-muted small">Total Pages</div><h4 class="mb-0 fw-bold">@Model.Count</h4></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-success bg-opacity-10 text-success me-3"><i class="fas fa-check-circle"></i></div>
                    <div><div class="text-muted small">Published</div><h4 class="mb-0 fw-bold">@Model.Count(p => p.IsActive)</h4></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-warning bg-opacity-10 text-warning me-3"><i class="fas fa-pause-circle"></i></div>
                    <div><div class="text-muted small">Drafts</div><h4 class="mb-0 fw-bold">@Model.Count(p => !p.IsActive)</h4></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-info bg-opacity-10 text-info me-3"><i class="fas fa-layer-group"></i></div>
                    <div><div class="text-muted small">Layouts</div><h4 class="mb-0 fw-bold">@Model.Select(p => p.LayoutView).Distinct().Count()</h4></div>
                </div>
            </div>
        </div>
    </div>

    <div class="table-container">
        <div class="p-3">
            <table id="pagesTable" class="table table-hover align-middle w-100">
                <thead class="table-light">
                    <tr>
                        <th style="width: 30%">Title</th>
                        <th style="width: 25%">URL Slug</th>
                        <th style="width: 10%">Layout</th>
                        <th style="width: 10%">Status</th>
                        @* Removed Version Column *@
                        <th style="width: 15%">Last Updated</th>
                        <th style="width: 10%" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="cell-truncate" title="@item.Title">
                                <div class="fw-bold text-dark text-truncate">@item.Title</div>
                                @if (!string.IsNullOrEmpty(item.MetaTitle))
                                {
                                    <div class="small text-muted text-truncate">@item.MetaTitle</div>
                                }
                            </td>
                            <td class="cell-truncate">
                                <a href="/page/@item.Slug" target="_blank" class="page-slug text-decoration-none" title="/@item.Slug">
                                    /@item.Slug <i class="fas fa-external-link-alt ms-1 small"></i>
                                </a>
                            </td>
                            <td>
                                @{
                                    var layoutName = item.LayoutView.Replace("_Cms", "").Replace("Column", " Col");
                                    var badgeClass = item.LayoutView == "_CmsBlank" ? "bg-secondary" : "bg-primary";
                                }
                                <span class="badge badge-layout @badgeClass">@layoutName</span>
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="status-badge status-active"><i class="fas fa-circle text-success me-1" style="font-size:6px"></i> Live</span>
                                }
                                else
                                {
                                    <span class="status-badge status-inactive"><i class="fas fa-circle text-warning me-1" style="font-size:6px"></i> Draft</span>
                                }
                            </td>
                            @* Removed Version Column Data *@
                            <td>
                                <div class="small fw-bold">@((item.UpdatedAt ?? item.CreatedAt).ToString("MMM dd, yyyy"))</div>
                                <div class="small text-muted" style="font-size: 0.75rem;">by @(item.UpdatedBy ?? item.CreatedBy)</div>
                            </td>
                            <td class="text-center">
                                <div class="d-flex gap-2 justify-content-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/page/@item.Slug" target="_blank" class="btn btn-sm btn-outline-info" title="Preview">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <button onclick="deletePage(@item.Id, '@item.Title')" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function() {
            $('#pagesTable').DataTable({
                order: [[4, 'desc']], // Sorted by Last Updated (now index 4 after removing Version)
                pageLength: 25,
                dom: '<"row mb-3"<"col-md-6"l><"col-md-6"f>>' +
                     'tr' +
                     '<"row mt-3"<"col-md-6"i><"col-md-6"p>>',
                language: {
                    search: "",
                    searchPlaceholder: "Search pages...",
                    info: "Showing _START_ to _END_ of _TOTAL_ pages",
                    infoEmpty: "No pages found"
                }
            });
        });

        function deletePage(pageId, pageTitle) {
            Swal.fire({
                title: 'Delete Page?',
                html: `Are you sure you want to delete <strong>"${pageTitle}"</strong>?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d32f2f',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, Delete'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Cms/Delete/' + pageId,
                        type: 'POST',
                        headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                        success: function(response) {
                            if (response.success) {
                                Swal.fire('Deleted!', 'Page has been deleted.', 'success').then(() => location.reload());
                            } else {
                                Swal.fire('Error', response.message, 'error');
                            }
                        }
                    });
                }
            });
        }
    </script>
}