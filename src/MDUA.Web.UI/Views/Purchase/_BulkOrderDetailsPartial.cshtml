@model IEnumerable<MDUA.Entities.BulkOrderItemViewModel>
@{
    bool hasPending = Model != null && Model.Any(x => x.Status == "Pending");
    // Securely get VendorId from the first item
    int vendorId = Model != null && Model.Any() ? Model.First().VendorId : 0;
}

@if (hasPending)
{
    <div class="d-flex justify-content-end gap-2 mb-3" id="bulkActionsHeader">
        <button class="btn btn-success shadow-sm" id="btnShowReceiveAll">
            <i class="bi bi-box-seam"></i> Receive All
        </button>
        <button class="btn btn-outline-danger shadow-sm" id="btnRejectAll">
            <i class="bi bi-x-circle"></i> Reject Remaining
        </button>
    </div>

    <div id="bulkReceiveContainer" class="d-none bg-light p-3 border rounded mb-3 shadow-sm">
        <h6 class="fw-bold text-primary mb-3"><i class="bi bi-check2-all"></i> Bulk Receive (Single Invoice)</h6>
        <form id="bulkReceiveForm">
            <input type="hidden" id="bulkVendorId" value="@vendorId" />

            <div class="row g-2 mb-3">
                <div class="col-md-4">
                    <label class="small fw-bold text-muted">Invoice No *</label>
                    <input type="text" class="form-control" id="bulkInvoice" required placeholder="Enter Invoice #">
                </div>
                <div class="col-md-4">
                    <label class="small fw-bold text-muted">Payment Method</label>
                    <select class="form-select" id="bulkPaymentMethod">
                        <option value="">-- Unpaid --</option>
                        @if (ViewBag.PaymentMethods != null)
                        {
                            foreach (var pm in ViewBag.PaymentMethods)
                            {
                                @* FIX: Use 'Name' or 'PaymentMethodName' instead of MethodName *@
                                <option value="@pm.Id">@pm.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="small fw-bold text-muted">Remarks</label>
                    <input type="text" class="form-control" id="bulkRemarks" placeholder="Optional notes">
                </div>
            </div>

            <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                <table class="table table-sm table-bordered bg-white mb-0">
                    <thead class="table-light sticky-top" style="top: 0; z-index: 5;">
                        <tr>
                            <th>Item</th>
                            <th style="width: 80px;">Qty</th>
                            <th style="width: 120px;">Price</th>
                            <th style="width: 100px;" class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Where(x => x.Status == "Pending"))
                        {
                            <tr class="bulk-item-row" data-poid="@item.PoRequestId" data-variantid="@item.ProductVariantId">
                                <td>@item.ProductName <small class="text-muted">(@item.VariantName)</small></td>
                                <td><input type="number" class="form-control form-control-sm bulk-qty" value="@item.Quantity" min="1"></td>
                                <td><input type="number" class="form-control form-control-sm bulk-price" value="@item.SuggestedPrice"></td>
                                <td class="text-end bulk-row-total">0.00</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3 pt-2 border-top">
                <strong class="fs-5">Total: <span id="bulkTotalDisplay">0.00</span></strong>
                <div>
                    <button type="button" class="btn btn-secondary me-2" id="btnCancelBulk">Cancel</button>
                    <button type="submit" class="btn btn-primary">Confirm Receive</button>
                </div>
            </div>
        </form>
    </div>
}

<div id="originalListContainer">
    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-4 text-muted"><p>No items found for this order.</p></div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-sm table-bordered mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Product</th>
                        <th>Variant</th>
                        <th class="text-center" style="width: 80px;">Qty</th>
                        <th class="text-center" style="width: 100px;">Status</th>
                        <th class="text-center" style="width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var formId = "form-" + item.PoRequestId;
                        var btnGroupId = "btn-group-" + item.PoRequestId;

                        <tr>
                            <td class="fw-bold">@item.ProductName</td>
                            <td>@item.VariantName</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-center">
                                @if (item.Status == "Received")
                                {
                                    <span class="badge bg-success">Received</span>
                                }
                                else if (item.Status == "Rejected")
                                {

                                    <span class="badge bg-danger">Rejected</span>
                                }
                                else
                                {

                                    <span class="badge bg-warning text-dark">@item.Status</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.Status == "Pending")
                                {
                                    <div id="@btnGroupId" class="d-flex gap-1 justify-content-center">
                                        <button class="btn btn-sm btn-outline-success js-btn-receive-toggle px-2"
                                                data-target="@formId" title="Receive Item">
                                            <i class="bi bi-check-lg"></i> Receive
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger js-btn-reject px-2"
                                                data-poid="@item.PoRequestId" title="Reject Item">
                                            <i class="bi bi-x-lg"></i> Reject
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small"><i class="bi bi-check-all"></i> Completed</span>
                                }
                            </td>
                        </tr>

                        @if (item.Status == "Pending")
                        {
                            <tr id="@formId" class="receive-form-row d-none bg-light">
                                <td colspan="5" class="p-0">
                                    <div class="p-2 border-top border-primary bg-light">
                                        <h6 class="text-primary mb-2 small fw-bold"><i class="bi bi-arrow-return-right"></i> Receiving Details:</h6>
                                        <div class="row g-1 align-items-end">
                                            <div class="col-6 col-sm-2">
                                                <label class="small text-muted fw-bold">Qty</label>
                                                <input type="number" class="form-control form-control-sm js-input-qty" value="@item.Quantity" min="1" max="@item.Quantity">
                                            </div>
                                            <div class="col-6 col-sm-2">
                                                <label class="small text-muted fw-bold">Price(unit)</label>
                                                <input type="number" class="form-control form-control-sm js-input-price" value="@item.SuggestedPrice" placeholder="0.00">
                                            </div>
                                            <div class="col-6 col-sm-2">
                                                <label class="small text-muted fw-bold">Invoice</label>
                                                <input type="text" class="form-control form-control-sm js-input-invoice" placeholder="Ref #">
                                            </div>
                                            <div class="col-6 col-sm-3">
                                                <label class="small text-muted fw-bold">Remarks</label>
                                                <input type="text" class="form-control form-control-sm js-input-remarks" placeholder="Optional notes">
                                            </div>
                                            <div class="col-12 col-sm-3">
                                                <label class="small fw-bold text-secondary d-none d-sm-block">&nbsp;</label>
                                                <div class="d-flex gap-1">
                                                    <button class="btn btn-sm btn-primary flex-fill js-btn-confirm-receive"
                                                            data-variantid="@item.ProductVariantId"
                                                            data-max-qty="@item.Quantity"
                                                            data-poid="@item.PoRequestId">
                                                        Confirm
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-secondary flex-fill js-btn-cancel-receive"
                                                            data-target="@formId">
                                                        Cancel
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="mt-2 text-center border-top pt-2">
            <small class="text-muted">Total Order Items: <strong>@Model.Sum(x => x.Quantity)</strong></small>
        </div>
    }
</div>