@model IEnumerable<MDUA.Entities.SubscriptionPlan>
@{
    ViewData["Title"] = "Subscription Plans";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Subscription Plans</h6>
        <a href="@Url.Action("CreatePlan")" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Create New Plan
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Plan Name</th>
                        <th>Code</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PlanName</td>
                            <td><span class="badge badge-secondary">@item.PlanCode</span></td>
                            <td>@item.BasePrice @item.CurrencyCode</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Inactive</span>
                                }
                            </td>
                            <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a href="@Url.Action("EditPlan", new { id = item.Id })" class="btn btn-info btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>