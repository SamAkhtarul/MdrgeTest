﻿@using System.Linq
@model MDUA.Web.Controllers.PlanUpgradeViewModel
@{
    ViewData["Title"] = "Update Plan";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Update Subscription Plan</h6>
    </div>
    <div class="card-body">
        <div class="mb-4">
            <strong>Current Plan:</strong>
            <span class="text-primary">@((Model.CurrentSubscription?.PlanNameSnapshot) ?? "No Active Plan")</span>
        </div>

        @if (Model.AvailablePlans == null || !Model.AvailablePlans.Any())
        {
            <div class="alert alert-warning mb-0">No active plans are available right now.</div>
        }
        else
        {
            <div class="row">
                @foreach (var option in Model.AvailablePlans)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 border-left-primary">
                            <div class="card-body">
                                <h5 class="card-title text-primary">@option.Plan.PlanName</h5>
                                <p class="text-muted mb-2">@option.Plan.PlanCode</p>
                                <p class="mb-1"><strong>Price:</strong> @option.Plan.BasePrice @option.Plan.CurrencyCode</p>
                                <p class="mb-1"><strong>Max Products:</strong> @option.MaxProducts</p>
                                <p class="mb-3"><strong>Max Orders:</strong> @option.MaxOrders / @option.OrderCycle</p>
                                <form asp-action="UpdateMyPlan" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="planId" value="@option.Plan.Id" />
                                    <button type="submit" class="btn btn-sm btn-primary">
                                        <i class="fas fa-check"></i> Choose Plan
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>