@model List<MDUA.Entities.AttributeValue>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
        <tr>
            <th class="ps-4">Value</th>
            <th class="text-center">Order</th>
            <th class="text-center">Status</th>
            <th class="text-end pe-4">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var val in Model)
        {
            <tr>
                <td class="ps-4 fw-bold">@val.Value</td>
                <td class="text-center text-muted">@val.DisplayOrder</td>
                <td class="text-center">
                    <div class="form-check form-switch d-inline-block">
                        <input class="form-check-input" type="checkbox" 
                               @(val.IsActive ? "checked" : "") 
                               onchange="toggleValueStatus(@val.Id, this)">
                    </div>
                </td>
                <td class="text-end pe-4">
                    <button class="btn btn-sm btn-light text-warning" onclick="editValue(@val.Id, '@val.Value', @val.DisplayOrder, @(val.IsActive.ToString().ToLower()))">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="btn btn-sm btn-light text-danger" onclick="deleteValue(@val.Id)">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="text-center text-muted py-5">
        <i class="fas fa-box-open fa-3x mb-3 text-secondary opacity-50"></i>
        <p class="mb-0">No values defined yet.</p>
    </div>
}