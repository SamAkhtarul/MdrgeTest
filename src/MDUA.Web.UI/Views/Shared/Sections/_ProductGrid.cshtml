@using MDUA.Facade.Interface
@inject IProductFacade ProductFacade
@model Dictionary<string, string>

@{
    // 1. Get Company ID from ViewBag (Default to 1 if missing)
    int companyId = ViewBag.CurrentCompanyId is int id ? id : 1;

    // 2. Parse Settings
    string title = Model.ContainsKey("Title") ? Model["Title"] : "New Arrivals";
    int count = Model.ContainsKey("Count") && int.TryParse(Model["Count"], out int c) ? c : 8;
    int? catId = Model.ContainsKey("CategoryId") && int.TryParse(Model["CategoryId"], out int cid) ? cid : null;

    // 3. ✅ PASS DYNAMIC ID TO FACADE
    var products = ProductFacade.GetShopData(companyId, catId).Take(count).ToList();
}

<div class="container mb-5">
    <div class="d-flex justify-content-between align-items-end mb-4 border-bottom pb-2">
        <h2 class="h4 fw-bold mb-0">
            <i class="fas fa-fire text-warning me-2" aria-hidden="true"></i>@title
        </h2>

        <a href="/all-products" class="btn btn-sm btn-outline-dark rounded-pill px-3">View All</a>
    </div>

    @if (products.Any())
    {
        <div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-3">
            @foreach (var prod in products)
            {
                <div class="col">
                    <div class="card h-100 border shadow-sm product-card">

                        <div class="p-3 text-center position-relative" style="background:#fff;">
                            @{
                                string finalImgUrl = prod.ImageUrl;
                                if (string.IsNullOrEmpty(finalImgUrl) || finalImgUrl.Contains("default-book.png"))
                                {
                                    finalImgUrl = "/images/no-image-224.webp";
                                }

                            }
                            <a href="/product/@prod.Slug" target="_blank">
                                <img src="@finalImgUrl"
                                     class="img-fluid"
                                     width="224" height="224"
                                     style="height:160px; object-fit:contain;"
                                     loading="lazy" decoding="async"
                                     alt="@prod.Name"
                                     onerror="this.onerror=null;this.src='/images/no-image-224.webp';">

                            </a>
                        </div>

                        <div class="card-body p-2 text-center d-flex flex-column">
                            <p class="text-truncate mb-1 fw-bold">
                                <a href="/product/@prod.Slug" target="_blank" class="text-dark text-decoration-none fw-bold" title="@prod.Name">
                                    @prod.Name
                                </a>
                            </p>
                            <div class="mt-auto fw-bold text-danger">Tk. @prod.Price.ToString("N0")</div>
                            <button class="btn btn-sm btn-outline-danger rounded-pill mt-2" onclick="addToCart(@prod.Id)">
                                <i class="fas fa-cart-plus"></i> Add
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center text-muted py-4">No products found in this section.</div>
    }
</div>