@model MDUA.Entities.CmsPage
@using MDUA.Facade.Interface
@using MDUA.Web.UI.Services.Interface
@inject ICompanyFacade CompanyFacade
@inject ITenantResolver TenantResolver
@inject ISettingsFacade SettingsFacade
@inject IProductFacade ProductFacade

@{
    // 1. Resolve Dynamic Company ID
    int currentCompanyId = TenantResolver.GetCompanyId();

    // 2. Fetch Company Details
    var companyObj = CompanyFacade.Get(currentCompanyId);
    string displayCompanyName = companyObj?.CompanyName ?? "MDUA Store";

    // 3. Fetch Favicon
    string favUrl = ViewBag.FaviconUrl as string;
    if (string.IsNullOrEmpty(favUrl))
    {
        string dbFavicon = SettingsFacade.GetGlobalSetting(currentCompanyId, "FaviconUrl");
        favUrl = !string.IsNullOrEmpty(dbFavicon) ? dbFavicon : "/favicon.ico";
    }

   

    // 5. Fetch Sidebar Data (Categories)
    var categories = ProductFacade.GetAddProductData(0).Categories.ToList();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @displayCompanyName</title>

    <link rel="icon" type="image/x-icon" href="@favUrl" />
    <link rel="shortcut icon" type="image/x-icon" href="@favUrl" />
    <partial name="_Analytics" />
    <partial name="_Recaptcha" />

    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    @section Styles {
        <link rel="stylesheet" href="~/css/home-layout.css" asp-append-version="true" />
    }
    @await RenderSectionAsync("Styles", required: false)

    <style>
        /* --- LAYOUT STYLES --- */
        body {
            background: #f8f9fa;
        }

        .cms-content-wrapper {
            padding: 3rem 0;
            min-height: 60vh;
        }

        .cms-main-content {
            background: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            border-top: 3px solid #d32f2f; /* Red */
        }

            .cms-main-content h1 {
                color: #d32f2f;
                border-bottom: 1px solid #eee;
                padding-bottom: 1rem;
                margin-bottom: 1.5rem;
            }

        /* Sidebar Styling */
        .sidebar-widget {
            background: white;
            padding: 1.5rem;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            margin-bottom: 1.5rem;
            border-top: 3px solid #ffc107; /* Yellow */
        }

        .sidebar-widget-title {
            font-weight: 700;
            color: #333;
            margin-bottom: 1rem;
            border-bottom: 1px solid #f0f0f0;
            padding-bottom: 0.5rem;
        }

            .sidebar-widget-title i {
                color: #ffc107;
            }

        .category-list a {
            display: block;
            padding: 8px 12px;
            border-radius: 4px;
            color: #555;
            text-decoration: none;
            border-bottom: 1px solid #f8f9fa;
            transition: all 0.2s;
        }

            .category-list a:hover {
                background: #fff8e1;
                color: #d32f2f;
                padding-left: 18px;
            }

        /* Inject Custom CSS */
        @Html.Raw(Model.CustomCss)
    </style>
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    @if (!Model.IsActive)
    {
        <div class="bg-warning text-dark text-center fw-bold p-2 border-bottom border-dark shadow-sm"
             style="position: sticky; top: 0; z-index: 9999;">
            <i class="fas fa-eye-slash me-2"></i> PREVIEW MODE: This page is currently DRAFT
        </div>
    }
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                @if (companyObj != null && !string.IsNullOrEmpty(companyObj.LogoImg))
                {
                    @* ✅ FIX: Added inline style to FORCE 30px height *@
                    <img src="@companyObj.LogoImg" alt="@displayCompanyName" style="height: 30px; width: auto;" class="me-2">
                }
                else
                {
                    <i class="fas fa-store me-2 text-warning"></i>
                }
                @displayCompanyName
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#publicNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="publicNav">
                <form asp-controller="Home" asp-action="Shop" method="get" class="d-flex mx-auto my-2 my-lg-0 search-container" style="width: 100%; max-width: 500px;">
                    <div class="input-group">
                        <input class="form-control" type="search" name="query"
                               placeholder="Search for products..."
                               aria-label="Search"
                               value="@Context.Request.Query["query"]">

                        <button class="btn btn-warning" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>

                <ul class="navbar-nav ms-auto align-items-center gap-3">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="LogIn">
                            <i class="fas fa-user-circle me-1 fa-lg"></i> Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                            <i class="fas fa-shopping-cart fa-lg"></i>
                            <span id="cart-badge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                  style="font-size: 0.7rem; padding: 0.35em 0.65em;">
                                @(Context.Session.GetInt32("CartCount") ?? 0)
                                <span class="visually-hidden">items in cart</span>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container cms-content-wrapper">
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="cms-main-content">
                    @RenderBody()
                </div>
            </div>

            <div class="col-lg-4">
                <div class="sticky-top" style="top: 90px; z-index: 900;">

                    @if (!string.IsNullOrEmpty(Model.SidebarContentHtml))
                    {
                        <div class="sidebar-widget">
                            @Html.Raw(Model.SidebarContentHtml)
                        </div>
                    }

                    @if (categories.Any())
                    {
                        <div class="sidebar-widget">
                            <h5 class="sidebar-widget-title"><i class="fas fa-list me-2"></i> Categories</h5>
                            <div class="category-list">
                                @foreach (var cat in categories.Take(8))
                                {
                                    <a href="/all-products?category=@cat.Id">@cat.Name</a>
                                }
                            </div>
                        </div>
                    }

                    <div class="sidebar-widget">
                        <h5 class="sidebar-widget-title"><i class="fas fa-link me-2"></i> Quick Links</h5>
                        <div class="category-list">
                            <a href="/page/about">About Us</a>
                            <a href="/page/contact">Contact Us</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <partial name="_Footer" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @if (!string.IsNullOrEmpty(Model.CustomJs))
    {
        <script>
            @Html.Raw(Model.CustomJs)
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>